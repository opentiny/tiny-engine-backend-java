<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tinyengine.it.mapper.AppExtensionsMapper">

    <!-- 通用设置 -->

    <!-- 通用查询列 -->
    <sql id="Base_Column_List">
        id
        , name, type, content, app, category, created_at, updated_at, created_by, updated_by
    </sql>

    <!-- 通用条件列 -->
    <sql id="AppExtensionsByCondition">
        <if test="name!=null and name!=''">
            AND name = #{name}
        </if>
        <if test="type!=null and type!=''">
            AND type = #{type}
        </if>
        <if test="content!=null and content!=''">
            AND content = #{content}
        </if>
        <if test="app!=null and app!=''">
            AND app = #{app}
        </if>
        <if test="category!=null and category!=''">
            AND category = #{category}
        </if>
        <if test="createdAt!=null and createdAt!=''">
            AND created_at = #{createdAt}
        </if>
        <if test="updatedAt!=null and updatedAt!=''">
            AND updated_at = #{updatedAt}
        </if>
        <if test="createdBy!=null and createdBy!=''">
            AND created_by = #{createdBy}
        </if>
        <if test="updatedBy!=null and updatedBy!=''">
            AND updated_by = #{updatedBy}
        </if>
    </sql>

    <!-- 通用设置列 -->
    <sql id="AppExtensionsSetColumns">
        <if test="name!=null and name!=''">
            name = #{name},
        </if>
        <if test="type!=null and type!=''">
            type = #{type},
        </if>
        <if test="content!=null and content!=''">
            content = #{content},
        </if>
        <if test="app!=null and app!=''">
            app = #{app},
        </if>
        <if test="category!=null and category!=''">
            category = #{category},
        </if>
        <if test="createdAt!=null and createdAt!=''">
            created_at = #{createdAt},
        </if>
        <if test="updatedAt!=null and updatedAt!=''">
            updated_at = #{updatedAt},
        </if>
        <if test="createdBy!=null and createdBy!=''">
            created_by = #{createdBy},
        </if>
        <if test="updatedBy!=null and updatedBy!=''">
            updated_by = #{updatedBy},
        </if>
    </sql>


    <!-- 通用查询映射结果 -->
    <resultMap id="AppExtensionsMap" type="com.tinyengine.it.model.entity.AppExtensions">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="content" property="content"/>
        <result column="app" property="app"/>
        <result column="category" property="category"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="created_by" property="createdBy"/>
        <result column="updated_by" property="updatedBy"/>
    </resultMap>

    <!-- 查询表app_extensions所有数据 -->
    <select id="findAllAppExtensions" resultMap="AppExtensionsMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM app_extensions
    </select>

    <!-- 根据主键id查询表app_extensions信息 -->
    <select id="findAppExtensionsById" resultMap="AppExtensionsMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM app_extensions
        WHERE id=#{id}
    </select>

    <!-- 根据条件查询表app_extensions数据 -->
    <select id="findAppExtensionsByCondition" resultMap="AppExtensionsMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM app_extensions
        WHERE 1=1
        <include refid="AppExtensionsByCondition"/>
    </select>

    <!-- 根据主键id删除表app_extensions数据 -->
    <delete id="deleteAppExtensionsById">
        DELETE
        FROM app_extensions
        WHERE id = #{id}
    </delete>

    <!-- 根据主键id更新表app_extensions数据 -->
    <update id="updateAppExtensionsById" parameterType="com.tinyengine.it.model.entity.AppExtensions">
        UPDATE app_extensions
        <set>
            <include refid="AppExtensionsSetColumns"/>
        </set>
        WHERE
        id=#{id}
    </update>

    <!-- 新增表app_extensions数据 -->
    <insert id="createAppExtensions" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.tinyengine.it.model.entity.AppExtensions">
        INSERT INTO app_extensions ( id
                                   , name
                                   , type
                                   , content
                                   , app
                                   , category
                                   , created_at
                                   , updated_at
                                   , created_by
                                   , updated_by)
        VALUES ( #{id}
               , #{name}
               , #{type}
               , #{content}
               , #{app}
               , #{category}
               , #{createdAt}
               , #{updatedAt}
               , #{createdBy}
               , #{updatedBy})
    </insert>
</mapper>
